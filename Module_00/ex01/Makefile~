CC      		= 	g++
CFLAGS  		= 	-Wall -Werror -Wextra -std=c++98
CFLAGS_DEBUG 	=	-g -fsanitize=address,undefined

SRC     		=	main.cpp \
					contactClass.cpp \
					phoneBookClass.cpp
OBJ 		    = 	$(SRC:%.cpp=%.o)
NAME		    = 	phonebook

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

.PHONY: clean fclean re

clean:
	/bin/rm -f $(OBJ)

fclean: clean
	/bin/rm -f $(NAME)


debug: 

re: fclean all

