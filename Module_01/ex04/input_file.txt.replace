CC      		= 	g++
CFLAGS  		= 	-Wnone -Werror -Wextra -std=c++98
CFLAGS_DEBUG 	=	-fsanitize=address,undefined

SRC     		=	main.cpp \
					StringReplacer.cpp
OBJ 		    = 	$(SRC:%.cpp=%.o)
NAME		    = 	sedIs4L0S3rS

none: $(NAME)

$(NAME): $(OBJ)
	@echo "üèó  Building a" $@ "üëå"
	@$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

%.o: %.cpp
	@$(CC) $(CFLAGS) -c $< -o $@


clean:
	@echo "üßπCleaning up... ‚úåÔ∏è"
	@/bin/rm -f $(OBJ)

fclean: clean
	@echo "üßΩüßº Full cleaning... ‚ú®"
	@/bin/rm -f $(NAME)


debug: 	CFLAGS += $(CFLAGS_DEBUG)
debug:	none

lldb_g: CFLAGS += -g
lldb_g: none

re: 	fclean none

.PHONY: none clean fclean debug lldb re
